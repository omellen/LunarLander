//when first created, the game has not yet started
started = false;

//the player should start with a full fuel tank
fuel = 100;

//because the game has not yet started, gravity should be set to 0
gravity = 0;

//the player should start off able to operate the ship
canOperate = true;

//how fast the ship should rotate
rotationSpeed = 2;

//the ship should be visible
image_index = 0;

//the ship has not yet landed since it spawns in midair
landed = false;

//it doesn't matter what this variable is set to before the player has landed the ship
//for simplicity's sake, we'll just say it's airborn for now
landing = "airborn";



